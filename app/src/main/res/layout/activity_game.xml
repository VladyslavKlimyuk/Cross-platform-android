<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".GameActivity">

    <Button
        android:id="@+id/startGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Розпочати гру"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/gameModeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        <Button
            android:id="@+id/computerGuessButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Загадує комп'ютер"
            android:layout_marginRight="8dp"/>

        <Button
            android:id="@+id/playerGuessButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Загадує гравець"/>
    </LinearLayout>

    <TextView
        android:id="@+id/hintTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:text="Підказка буде тут"
        android:visibility="gone" />

    <EditText
        android:id="@+id/guessEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Введіть число"
        android:inputType="number"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:visibility="gone"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Підтвердити"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/moreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Більше"
            android:visibility="gone"/>
        <Button
            android:id="@+id/lessButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Менше"
            android:visibility="gone"/>
        <Button
            android:id="@+id/guessedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вгадав"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
